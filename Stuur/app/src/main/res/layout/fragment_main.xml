<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragmentxml"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.stuur.stuur.MainActivity$PlaceholderFragment">

    <TextView
        android:id="@+id/section_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textSize="60dp"
        android:layout_marginTop="-12dp"
        android:layout_weight="100" />

    <TextView
        android:id="@+id/stuur_key_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="75dp"
        android:textSize="25dp"/>

    <com.stuur.stuur.ActionEditText
        android:id="@+id/msg_box"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:layout_marginTop="75dp"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:includeFontPadding="false"
        android:hint="@string/msg_hint"
        android:background="#FFF"
        android:maxLines="8"
        android:maxLength="90"
        android:scrollbars="none"
        android:layout_weight="1"
        android:singleLine="false"
        android:inputType="textMultiLine"
        android:imeOptions="actionSend"/>

    <com.stuur.stuur.ActionEditText
        android:id="@+id/anim_msg_box"
        android:editable="false"
        android:focusable="false"
        android:visibility="invisible"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:layout_marginTop="75dp"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:includeFontPadding="false"
        android:hint="@string/msg_hint"
        android:background="#FFF"
        android:maxLines="8"
        android:maxLength="90"
        android:scrollbars="none"
        android:layout_weight="1"
        android:imeOptions="actionSend"/>

    <Button
        android:id="@+id/add_friend_btn"
        android:layout_height="wrap_content"
        android:layout_width="350dp"
        android:layout_marginTop="75dp"
        android:layout_centerHorizontal="true"
        android:text="Add Friend" />

    <ListView

        android:id="@+id/friend_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:background="#FFF"/>


    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/settings_scroll"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:scrollbars="none">

        <RelativeLayout
            android:id="@+id/settings_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ListView
                android:layout_width="wrap_content"
                android:layout_height="281dp"
                android:id="@+id/user_info_list"
                android:layout_marginTop="150dp"
                android:background="#FFF"
                android:layout_weight="1"
                android:scrollbars="none"
            />

            <ListView
                android:layout_width="wrap_content"
                android:layout_height="211dp"
                android:id="@+id/censor_weight_list"
                android:layout_marginTop="450dp"
                android:background="#FFF"
                android:layout_weight="1"
                android:scrollbars="none"
                />

            <ListView
                android:layout_width="wrap_content"
                android:layout_height="211dp"
                android:id="@+id/censor_type_list"
                android:layout_marginTop="675dp"
                android:background="#FFF"
                android:layout_weight="1"
                android:scrollbars="none"
                />

        </RelativeLayout>

    </ScrollView>


</RelativeLayout>
